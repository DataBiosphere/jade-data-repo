{
  "name": "BulkLoadPodDeleteDisruption",
  "description": "3 bulk file loads each on 2 different datasets, while killing a random pod after ~30 seconds",
  "serverSpecificationFile": "localhost.json",
  "billingAccount": "00708C-45D19D-27AAFA",
  "kubernetes": {
    "numberOfInitialPods" : 3
  },
  "application": {
    "maxStairwayThreads" : 120,
    "loadConcurrentFiles": 80,
    "loadDriverWaitSeconds": 1
  },
  "failureScript": {
    "failureScriptName": "RandomPodDelete",
    "description": "Deleting 1 pod after 30 seconds",
    "parameters": [1, 30]
  },
  "testScripts": [
    {
      "name": "BulkLoad",
      "parameters": [2],
      "totalNumberToRun": 3,
      "numberToRunInParallel": 1,
      "expectedTimeForEach": 300,
      "expectedTimeForEachUnit": "SECONDS"
    },
    {
      "name": "BulkLoad",
      "parameters": [4],
      "totalNumberToRun": 3,
      "numberToRunInParallel": 1,
      "expectedTimeForEach": 300,
      "expectedTimeForEachUnit": "SECONDS"
    }
  ],
  "testUserFiles": ["dumbledore.json", "george.json", "harry.json", "hermione.json", "mcgonagall.json", "neville.json", "voldemort.json"]
}
